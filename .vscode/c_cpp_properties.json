{
    "configurations": [
        {
            "name": "ESP-IDF",
            "includePath": [
                "${workspaceFolder}/**",
                "${env:IDF_PATH}/components/**",
                "${env:IDF_PATH}/tools/**",
                "${workspaceFolder}/managed_components/**"
            ],
            "defines": [
                "IDF_VER=\"${env:IDF_VERSION}\""
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-x64",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "${env:IDF_PATH}",
                    "${workspaceFolder}/managed_components"
                ]
            }
        }
    ],
    "version": 4
}